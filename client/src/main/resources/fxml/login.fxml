<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.jesus.learningwords.controller.LoginController">
   <children>
      <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
          <columnConstraints>
              <ColumnConstraints halignment="RIGHT" />
              <ColumnConstraints halignment="RIGHT" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints />
              <RowConstraints />
              <RowConstraints />
          </rowConstraints>
          <children>
              <Label text="Username" />
              <PasswordField fx:id="password" onAction="#onLog" GridPane.columnIndex="1" GridPane.rowIndex="1" />
              <Button mnemonicParsing="false" onAction="#onLog" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <graphic>
                  <ImageView fitWidth="20.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/key.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
              <Label text="Password" GridPane.rowIndex="1" />
              <TextField fx:id="username" onAction="#onLog" GridPane.columnIndex="1" />
          </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </GridPane>
   </children>
</StackPane>
